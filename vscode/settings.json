{
    //? Note:
    //? This file is symlinked from ~/.config/vscode/settings.json for GitHub tracking.
    //? ln -s target_path link_path

    // Theme
    "workbench.colorTheme": "One Dark Pro",
    "workbench.iconTheme": "Monokai Pro Icons",
    "workbench.colorCustomizations": {
        // Editor
        "editor.background": "#262828",

        // Activity bar
        "activityBar.activeBackground": "#262828",
        "activityBar.background": "#262828",
        "activityBar.foreground": "#007D6F",
        "activityBar.inactiveForeground": "#425654",
        "activityBarBadge.foreground": "#007D6F",
        "activityBarBadge.background": "#e7e9e8",

        // Side bar
        "sideBar.background": "#1f2020",
        "sideBarSectionHeader.background": "#425654",
        "sideBarSectionHeader.foreground": "#e7e9e8",

        // Title bar
        "titleBar.activeBackground": "#425654",
        "titleBar.inactiveBackground": "#262828",
        "titleBar.activeForeground": "#e7e9e8",

        // Tab
        "tab.activeBackground": "#1f2020",
        "tab.activeBorder": "#e7e9e8",
        "tab.inactiveBackground": "#262828",

        // Status bar
        "statusBar.foreground": "#007D6F",
        "statusBar.background": "#262828",
        "statusBar.debuggingBackground": "#1f2020",
        "statusBar.noFolderBackground": "#1f2020",
        "statusBarItem.remoteBackground": "#007D6F",
        "statusBarItem.remoteForeground": "#e7e9e8"
    },
    "oneDarkPro.vivid": false,
    "oneDarkPro.bold": true,

    // Editor changes
    "editor.hover.above": false,
    "editor.padding.bottom": 10,
    "editor.padding.top": 10,
    "workbench.editor.enablePreview": false,
    "window.zoomLevel": 0.2,

    // Workbench
    "workbench.tree.indent": 10,
    "workbench.startupEditor": "none",

    // Font
    "editor.fontFamily": "JetBrains Mono NL",
    "editor.fontLigatures": false,
    "editor.fontSize": 14,

    // Indentation
    "editor.detectIndentation": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,

    // Minimap
    "editor.minimap.renderCharacters": false,
    "editor.minimap.maxColumn": 120,
    "editor.minimap.showSlider": "always",

    // Cursor
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorWidth": 3,

    // File cleaning
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "sonarlint.disableTelemetry": true,

    // ------------- Extenstions -------------

    // Linting
    "editor.formatOnSave": true,

    // Prettier
    "prettier.singleQuote": true,
    "prettier.trailingComma": "all",
    "prettier.semi": true,
    "prettier.tabWidth": 4,

    // ESLint
    "eslint.format.enable": true,
    "eslint.validate": ["javascript", "typescript", "typescriptreact", "vue"],

    // Codesnap
    "codesnap.containerPadding": "1rem",
    "codesnap.showWindowControls": false,
    "codesnap.shutterAction": "copy",

    // Error Lens
    "errorLens.messageBackgroundMode": "message",
    "errorLens.padding": "0 6px",
    "errorLens.gutterIconsEnabled": true,
    "errorLens.gutterIconSet": "squareRounded",
    "errorLens.gutterIconSize": "110%",

    // Indent Rainbow
    "indentRainbow.colors": [
        "rgba(255,255,255,0.05)",
        "rgba(255,255,255,0.01)",
        "rgba(0,0,0,0.1)",
        "rgba(0,0,0,0.2)"
    ],

    // Better Comments
    "better-comments.tags": [
        {
            "tag": "!",
            "color": "#FF2D00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": true,
            "italic": false
        },
        {
            "tag": "?",
            "color": "#3498DB",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "//",
            "color": "#474747",
            "strikethrough": true,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "todo",
            "color": "#FF8C00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "*",
            "color": "#98C379",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        }
    ],
}
